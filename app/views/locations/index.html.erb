<!-- Google map library files -->

<!-- Google map div -->
<div style='width: 800px;'>
  <div id="feed_map" style='width: 1200px; height: 600px;'></div>
</div>
    


<script>
		<% @location_hash.each_slice(2) do |location_hash|%>
				drawPolyline({"latitude" :<%= location_hash.first[:lat]%>,"longitude" : <%=location_hash.first[:lng]%>},{"latitude" :<%=location_hash.last[:lat]%>,"longitude" : <%=location_hash.last[:lng]%>});
		<%end%>

		google.maps.event.addDomListener(window, "load", initializeMap(<%=raw @location_hash.to_json %>));

</script>
